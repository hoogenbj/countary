<?import javafx.scene.control.TreeTableColumn?>
<?import javafx.scene.control.TreeTableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>
<VBox xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1">
    <HBox alignment="CENTER" minHeight="25">
        <Text fx:id="balance" strokeType="OUTSIDE" strokeWidth="0.0" styleClass="balance-text" text="Text"
              HBox.hgrow="ALWAYS"/>
    </HBox>
    <TreeTableView fx:id="treeTableView" editable="true" showRoot="false" xmlns="http://javafx.com/javafx/18"
                   xmlns:fx="http://javafx.com/fxml/1">
        <columns>
            <TreeTableColumn fx:id="categoryColumn" prefWidth="180.0" text="Category"/>
            <TreeTableColumn fx:id="plannedColumn" prefWidth="120.0" text="Planned"/>
            <TreeTableColumn fx:id="actualColumn" prefWidth="120.0" text="Actual"/>
        </columns>
    </TreeTableView>
</VBox>
