<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>
<fx:root layoutX="1.0" layoutY="1.0" type="javafx.scene.layout.StackPane" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1">
    <padding>
        <Insets bottom="1.0" left="1.0" right="1.0" top="1.0" />
    </padding>
    <HBox alignment="CENTER_LEFT" spacing="4.0" styleClass="beautiful-box">
        <HBox fx:id="categoryContainer">
            <padding>
                <Insets bottom="2.0" left="2.0" right="2.0" top="2.0"/>
            </padding>
            <Text fx:id="categoryName" strokeType="OUTSIDE" strokeWidth="0.0" text="Text" styleClass="beautiful-text">
                <HBox.margin>
                    <Insets left="4.0"/>
                </HBox.margin>
            </Text>
        </HBox>
        <Pane HBox.hgrow="ALWAYS" />
        <padding>
            <Insets bottom="2.0" left="3.0" right="3.0" top="2.0" />
        </padding>
    </HBox>
</fx:root>
