<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.text.Text?>

<?import java.net.URL?>
<fx:root layoutX="1.0" layoutY="1.0" type="javafx.scene.layout.StackPane"
         styleClass="my-tag-container"
         xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1">
    <padding>
        <Insets bottom="1.0" left="1.0" right="1.0" top="1.0"/>
    </padding>
    <Text fx:id="tag" strokeType="OUTSIDE" strokeWidth="0.0" text="Text" styleClass="my-tag"/>
    <stylesheets>
        <URL value="@DisplayTagControl.css"/>
    </stylesheets>
</fx:root>
