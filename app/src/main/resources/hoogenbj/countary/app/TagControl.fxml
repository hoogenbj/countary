<fx:root layoutX="1.0" layoutY="1.0" type="javafx.scene.layout.StackPane" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1">
    <padding>
        <Insets bottom="1.0" left="1.0" right="1.0" top="1.0" />
    </padding>
    <HBox alignment="CENTER" spacing="2.0" styleClass="my-tag-container">
      <Text fx:id="tag" strokeType="OUTSIDE" strokeWidth="0.0" styleClass="my-tag" text="Text" />
        <ImageView fitHeight="15.0" fitWidth="15.0" onMouseClicked="#closeClicked" pickOnBounds="true" preserveRatio="true">
            <Image url="@baseline_close_black_18dp.png" />
        </ImageView>
        <stylesheets>
            <URL value="@TagControl.css" />
        </stylesheets>
      <padding>
         <Insets bottom="2.0" left="3.0" right="3.0" top="2.0" />
      </padding>
    </HBox>
</fx:root>
