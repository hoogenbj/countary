<fx:root layoutX="1.0" layoutY="1.0" type="javafx.scene.layout.StackPane"
         xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1">
    <HBox alignment="CENTER" spacing="4.0" styleClass="my-tag-container">
        <ToggleButton contentDisplay="GRAPHIC_ONLY" mnemonicParsing="false" selected="true"
                      styleClass="my-tag-toggle" stylesheets="@TagToggle.css" fx:id="toggleButton">
        </ToggleButton>
        <Text fx:id="tag" strokeType="OUTSIDE" strokeWidth="0.0" styleClass="my-tag" text="Text"/>
        <StackPane.margin>
            <Insets bottom="2.0" left="2.0" right="2.0" top="2.0"/>
        </StackPane.margin>
        <stylesheets>
            <URL value="@TagToggle.css"/>
        </stylesheets>
        <padding>
            <Insets bottom="2.0" left="3.0" right="3.0" top="2.0"/>
        </padding>
    </HBox>
</fx:root>
